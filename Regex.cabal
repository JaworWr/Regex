cabal-version:      >=1.10
name:               Regex
version:            0.1.0.0
license:            MIT
license-file:       LICENSE
maintainer:         jawor403@gmail.com
author:             MichaÅ‚ Jaworski
category:           Text
build-type:         Simple
extra-source-files: CHANGELOG.md

library
    exposed-modules:  Regex
    hs-source-dirs:   src
    other-modules:
        Matching
        Parser
        DataTypes

    default-language: Haskell2010
    build-depends:
        base >=4.13 && <4.14,
        base >=4.13 && <4.14,
        mtl >=2.2,
        transformers >=0.5.6,
        unordered-containers >=0.2.10,
        hashable >=1.3

test-suite Regex-test
    type:             exitcode-stdio-1.0
    main-is:          RegexTest.hs
    hs-source-dirs:   test src
    other-modules:
        MatchingTest
        ParserTest
        DataTypes
        Matching
        Parser

    default-language: Haskell2010
    build-depends:
        base >=4.13 && <4.14,
        test-framework >=0.8.2,
        test-framework-hunit >=0.3,
        HUnit >=1.6,
        mtl >=2.2,
        transformers >=0.5.6,
        unordered-containers >=0.2.10,
        hashable >=1.3
